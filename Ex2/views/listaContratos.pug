extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Contratos
    .w3-container
      table.w3-table-all
        tr
          th ID de Contrato
          th Objeto do Contrato
          th Data de Celebração do Contrato
          th Preço Contratual
          th NIPC da Entidade Comunicante 
          th Entidade Comunicante
        
        each contrato in contratos
          tr
            td #[a(href="/"+contrato._id)= contrato._id]
            td= contrato.objectoContrato
            td= contrato.dataCelebracaoContrato
            td= contrato.precoContratual
            td #[a(href="/"+contrato.NIPC_entidade_comunicante)= contrato.NIPC_entidade_comunicante]
            td= contrato.entidade_comunicante

              
    footer.w3-container.w3-teal
      h5 Generated by Pedro Lopes in #{d}
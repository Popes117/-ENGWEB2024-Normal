extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h2 Registo do Contrato #{contrato._id}
        br
        .w3-container.w3-padding
            h4 Id: #{contrato._id}
            h4 Tipo de Procedimento: #{contrato.tipoprocedimento}
            h4 Objeto do Contrato: #{contrato.objectoContrato}
            h4 Data de Publicação: #{contrato.dataPublicacao}
            h4 Data de Celebração do Contrato: #{contrato.dataCelebracaoContrato}
            h4 Preço Contratual: #{contrato.precoContratual}
            h4 Prazo de Execução: #{contrato.prazoExecucao}
            h4 NIPC da Entidade Comunicante: #[a(href="/"+contrato.NIPC_entidade_comunicante)= contrato.NIPC_entidade_comunicante]
            h4 Entidade Comunicante: #{contrato.entidade_comunicante}
            h4 Fundamentação: #{contrato.fundamentacao}
        footer.w3-container.w3-teal
            h5 Generated by Pedro Lopes in #{d} - #[a(href="/") Return]
